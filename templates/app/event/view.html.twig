{% extends 'base.html.twig' %}

{% block title %}
	{{ parent()}}
{% endblock %}

{% block body %}
	<h1>{{ event.title }}
		-
		{{ event.startDate | date("d/m/Y", "Europe/Paris")}}</h1>

	<p>{{ event.description}}</p>
	{% if not registered %}
		<a href="{{ path('app_event_register', {id: event.id})}}">S'inscrire</a>
	{% else %}
		<a href="{{ path('app_event_unregister', {id: event.id})}}">Se d√©sinscrire</a>
	{% endif %}


	<br><br>
	{% if group is null %}
		<h2>Participants</h2>

		{% for userEvent in event.userEvents %}
			{{ userEvent.user }}
			<br>
		{% endfor %}
	{% else %}
		{% for user in group.users %}
			<div>{{ user.email}}</div>
		{% endfor %}
	{% endif %}

	<iframe name="embed_readwrite" src="http://localhost:9001/p/{{ group.etherpadPadId}}" width="100%" height="700" frameborder="0"></iframe>

{% endblock %}
