{% extends "/_emails/base.html.twig" %}
{% block content %}
	<td style="background-color: #ffffff;">
		<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
			<tr>
				<td style="padding: 20px; font-family: sans-serif; font-size: 15px; line-height: 20px; color: #555555;">
					<p style="margin: 0 0 10px;">Bonjour{{ user is defined ? ' ' ~ user.firstname : ''}},</p>
					<p style="margin: 0 0 10px;">Un événement vient juste d'être créé sur la plate-forme de délibération citoyenne
						<a href="{{ absolute_url(path('index'))}}" style="color:#2b4c8c; font-weight: bold">Ici<span style="color:#fa9746">On</span>Parle</a>.</p>
					<p style="margin: 20px 0 10px 0;font-size: 17px; color:#2b4c8c;font-weight:bold">{{ event.title}}</p>
					<p style="margin: 0 0 10px;">{{ event.description}}</p>
				</td>
			</tr>
			<tr>
				<td aria-hidden="true" height="40" style="font-size: 0px; line-height: 0px;">
					&nbsp;
				</td>
			</tr>
			<tr>
				<td
					style="padding: 0 20px 20px;">
					<!-- Button : BEGIN -->
					<table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
						<tr>
							<td class="button-td button-td-primary" style="border-radius: 4px; background: #2b4c8c;">
								{% if user is defined %}
									<a class="button-a button-a-primary" href="{{ absolute_url(path('app_dashboard'))}}" style="background: #2b4c8c; border: 1px solid #2b4c8c; font-family: sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; border-radius: 4px;">Inscris-toi à l'événement</a>
								{% else %}
									<a class="button-a button-a-primary" href="{{ absolute_url(path('index', {register: 1}))}}" style="background: #2b4c8c; border: 1px solid #2b4c8c; font-family: sans-serif; font-size: 15px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: block; border-radius: 4px;">Inscris-toi</a>
								{% endif %}

							</td>
						</tr>
					</table>
					<!-- Button : END -->
				</td>
			</tr>

		</table>
	</td>

{% endblock %}
