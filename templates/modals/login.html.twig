{% extends "modals/base.html.twig" %}

{% set modalID = "modalLogin" %}
{% set active = login %}

{% block content %}


	<div class="mt-5 px-4">
		<div class="mb-5">Renseigner vos identifiants pour vous connecter</div>

		<form class="mt-5" method="post" action="{{ path('app_login')}}">

			<div class="field mt-5">
				<div class="control has-icons-left">
					<input placeholder="Email" type="email" name="email" id="inputEmail" class="input " required autofocus>
					<span class="icon is-small is-left">
						<i class="fas fa-envelope"></i>
					</span>
				</div>

			</div>

			<div class="field mt-4 mb-5">
				<div class="control has-icons-left">
					<input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="input" required>
					<span class="icon is-small is-left">
						<i class="fas fa-lock"></i>
					</span>
				</div>

			</div>


			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="has-text-centered mt-5">
				<button class="button is-primary px-5 mt-5" type="submit">
					Connexion
				</button>
			</div>

		</form>
	</div>


{% endblock %}
